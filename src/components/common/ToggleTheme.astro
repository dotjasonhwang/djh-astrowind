---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class:
    className = 'text-muted hover:bg-surface-elevated focus:outline-hidden focus:ring-4 focus:ring-gray-400 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name="lucide:sun" class={`${iconClass} dark:hidden`} />
      <Icon name="lucide:moon" class={`${iconClass} hidden dark:block`} />
    </button>
  )
}
