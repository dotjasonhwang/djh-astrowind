---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import type { CallToAction as Props } from '~/types';

const {
  variant = 'secondary',
  target,
  text = Astro.slots.render('default'),
  icon = '',
  class: className = '',
  type,
  ...rest
} = Astro.props;

// Base button styles
const baseStyles = 'inline-flex items-center justify-center rounded-full border-subtle border bg-transparent font-medium text-center text-base text-foreground leading-snug transition py-3.5 px-6 md:px-8 ease-in duration-200 focus:ring-primary focus:ring-offset-background focus:ring-2 focus:ring-offset-2 hover:bg-surface-elevated hover:border-muted cursor-pointer';

// Variant styles - all button variants with complete styling
const variants = {
  primary: 'inline-flex items-center justify-center rounded-full font-semibold font-medium text-center text-base leading-snug transition py-3.5 px-6 md:px-8 ease-in duration-200 focus:ring-primary focus:ring-offset-background focus:ring-2 focus:ring-offset-2 cursor-pointer bg-primary text-white border-primary border hover:bg-primary-bold hover:border-primary-bold',
  secondary: baseStyles,
  tertiary: 'inline-flex items-center justify-center rounded-full bg-transparent font-medium text-center text-base text-muted leading-snug transition py-3.5 px-6 md:px-8 ease-in duration-200 focus:ring-primary focus:ring-offset-background focus:ring-2 focus:ring-offset-2 hover:text-foreground cursor-pointer border-none shadow-none',
  link: 'cursor-pointer hover:text-primary',
};
---

{
  type ? (
    <button
      type={type}
      class={twMerge('grid grid-flow-col auto-cols-max items-center gap-1', variants[variant] || variants.secondary, className)}
      {...rest}
    >
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class="w-5 h-5" />}
    </button>
  ) : (
    <a
      class={twMerge('grid grid-flow-col auto-cols-max items-center gap-1', variants[variant] || variants.secondary, className)}
      {...(target ? { target: target, rel: 'noopener noreferrer' } : {})}
      {...rest}
    >
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class="w-5 h-5" />}
    </a>
  )
}
