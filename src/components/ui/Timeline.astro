---
import { Icon } from 'astro-icon/components';
import type { Item } from '~/types';

export interface Props {
  items?: Array<Item>;
  defaultIcon?: string;
  classes?: Record<string, string>;
}

const { items = [], defaultIcon } = Astro.props as Props;
---

{
  items && items.length > 0 && (
    <div class="mt-8 md:mt-12">
      {items.map(({ title, description, icon }, index = 0) => (
        <div class="flex animate-on-scroll">
          <div class="flex flex-col items-center mr-4">
            <div>
              <div class="flex items-center justify-center">
                {(icon || defaultIcon) && (
                  <Icon
                    name={icon || defaultIcon}
                    class="w-10 h-10 p-2 rounded-full border-2 text-primary border-primary"
                  />
                )}
              </div>
            </div>
            {index !== items.length - 1 && <div class="w-px h-full bg-surface-elevated" />}
          </div>
          <div class={`pt-1 ${index !== items.length - 1 ? 'pb-8' : ''}`}>
            {title && <p class="text-xl font-bold" set:html={title} />}
            {description && <p class="text-muted mt-2" set:html={description} />}
          </div>
        </div>
      ))}
    </div>
  )
}
